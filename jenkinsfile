pipeline {
    agent any

    stages {
        stage('SCM checkout') {
            steps {
                echo 'SCM checkout from github'
                echo 'SCM checkout completed'
            }
        }
        stage('Build') {
            steps {
                echo 'Build completed'
            }
        }
        stage('Test') {
            steps {
                echo 'Test completed'
                echo 'date'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy completed'
            }
        }
    }
}
